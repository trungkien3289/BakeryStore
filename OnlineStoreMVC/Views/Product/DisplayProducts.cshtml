@model OnlineStore.Service.Messaging.GetProductsByCategoryResponse

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/plugins/pagingcontrol/simplePagination.css" rel="stylesheet" />
<link href="~/Content/plugins/price-range/price-range.css" rel="stylesheet" />
<link href="~/Content/display-product/display-product-view.css" rel="stylesheet" />
<link href="~/Content/webcss/prettyPhoto.css" rel="stylesheet" />
<link href="~/Content/plugins/pretty-photo/prettyPhoto.css" rel="stylesheet" />

<script src="~/Content/plugins/pagingcontrol/jquery.simplePagination.js"></script>
<script src="~/Content/plugins/price-range/price-range.js"></script>
<script src="~/Scripts/DisplayProduct/DisplayProduct.js"></script>
<script src="~/Scripts/webjs/jquery.prettyPhoto.js"></script>
<script src="~/Content/plugins/spin/spin.min.js"></script>

<!-- breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="/Home/Index"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">@Model.SelectedCategoryName</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<!--- groceries --->
<div class="products">
    <div class="container">
        <div class="col-md-4 products-left">
            <div class="categories">
                <h2>Danh Mục</h2>
                <ul class="cate">
                    <li><a href="products.html"><i class="fa fa-arrow-right" aria-hidden="true"></i>Bakery</a></li>
                    <ul>
                        @foreach (var category in ViewBag.BakeryCategoryList)
                        {
                            <li><a href="/Product/GetProductByCategory/@category.Id"><i class="fa fa-arrow-right" aria-hidden="true"></i>@category.Name</a></li>
                        }
                    </ul>
                    <li><a href="products.html"><i class="fa fa-arrow-right" aria-hidden="true"></i>KitChen Tools</a></li>
                    <ul>
                        @foreach (var category in ViewBag.KitchenToolsCategoryList)
                        {
                            <li><a href="/Product/GetProductByCategory/@category.Id"><i class="fa fa-arrow-right" aria-hidden="true"></i>@category.Name</a></li>
                        }
                    </ul>
                </ul>
            </div>
        </div>
        <div class="col-md-8 products-right">
            <div class="products-right-grid">
                <div class="products-right-grids">
                    <span class="display hidden-xs pull-right">Có @Model.TotalProducts sản phẩm</span>
                    <div class="sorting">
                        <label>Sắp xếp theo</label>
                        @Html.DropDownList("SortProductOptionsSelectListItems")
                    </div>
                </div>
                <div class="clearfix"> </div>

            </div>
            <div class="list-product-container clearfix">
                @Html.Partial("ListProduct", Model.Products)  <!-- list product -->
            </div>

            <div class="content_sortPagiBar">
                <div class="bottom-pagination-content clearfix">
                    <div class="paging-control-filtercontent pull-right"></div>
                </div>
            </div><!-- sort bar -->
            <div class="clearfix"> </div>

        </div>
    </div>
</div>
<!--- groceries --->
<script>
    $(document).ready(function(){
        DisplayProductManagement.init(@Model.SelectedCategory,@Model.NumberOfTitlesFound,@Model.CurrentPage);
    });
</script>