</style>
}

@section scripts{
<script src="~/Scripts/webjs/easyResponsiveTabs.js"></script>
<script>
    function initMap() {
        var uluru = { lat: 16.0486971, lng: 108.2354558 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 16,
            center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
    }
</script>

}

 <!--banner-->
