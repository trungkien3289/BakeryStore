@{
    ViewBag.Title = "Thanh Toán";
}

<link href="~/Content/display-product/checkout.css" rel="stylesheet" />
@Scripts.Render("~/bundles/argularjs")
<script src="~/Scripts/webjs/jquery.mycart.js"></script>
<script src="~/Scripts/DisplayProduct/CheckOut.js"></script>

<!--banner-->
<div class="banner-top">
    <div class="container">
        <h3>Đặt Hàng</h3>
        <h4><a href="/Home/Index">Trang Chủ</a><label>/</label>Đặt Hàng</h4>
        <div class="clearfix"> </div>
    </div>
</div>

<!-- contact -->
<div class="check-out" ng-app="ecom_Checkout">
    <div class="container" ng-controller="ecom_CheckOut_Controller as ctrl">
        <!-- Products list -->
        <div class="spec ">
            <h3>Danh Sách Sản Phẩm</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <script>
            $(document).ready(function (c) {
                $('.close1').on('click', function (c) {
                    $('.cross').fadeOut('slow', function (c) {
                        $('.cross').remove();
                    });
                });
            });
        </script>

        <div id="List_ProductsOfCart">
            <table class="table ">
                <tr>
                    <th class="t-head head-it ">Sản Phẩm</th>
                    <th class="t-head">Giá</th>
                    <th class="t-head">Số Lượng</th>
                    <th class="t-head"></th>
                </tr>
                <tbody class="cross" ng-repeat="product in ctrl.products track by product.id">
                    <tr class="cross">
                        <td class="ring-in t-data">
                            <a href="/Product/ProductDetails?id={{product.id}}" class="at-in">
                                <img src="{{product.image}}" class="img-responsive" alt="{{product.name}}">
                            </a>
                            <div class="sed">
                                <h5>{{product.name}}</h5>
                            </div>
                        </td>
                        <td class="t-data">{{product.price}} VND</td>
                        <td class="t-data">
                            <div class="quantity">
                                <div class="quantity-select">
                                    <div class="entry value-minus" ng-click="ctrl.minusQuantityProduct(product.id)">&nbsp;</div>
                                    <div class="entry value"><span class="span-1">{{product.quantity}}</span></div>
                                    <div class="entry value-plus active" ng-click="ctrl.plusQuantityProduct(product.id)">&nbsp;</div>
                                </div>
                            </div>
                        </td>
                        <td class="t-data t-w3l"><a class="btn-removeproduct-checkout" ng-click="ctrl.removeProductFromCart($event.currentTarget, product.id, product.quantity)">Xóa</a></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="spec ">
            <h3>Thông Tin Khách Hàng</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>

        <div class="row">
            <form name="formCheckOut" ng-submit="ctrl.checkOut()">
                <div class="form-group col-md-6 col-sm-6 col-xs-12 pull-left">
                    <label for="email">Tên:<span style="color:red;">(*)</span></label>
                    <input type="text" required class="form-control" ng-model="ctrl.checkOutModel.FullName">
                </div>
                <div class="form-group col-md-6 col-sm-6 col-xs-12 pull-left">
                    <label for="email">Địa Chỉ:<span style="color:red;">(*)</span></label>
                    <input type="text" required class="form-control" ng-model="ctrl.checkOutModel.Address">
                </div>
                <div class="form-group col-md-6 col-sm-6 col-xs-12 pull-left">
                    <label for="email">Số Điện Thoại:<span style="color:red;">(*)</span></label>
                    <input type="text" required class="form-control" ng-model="ctrl.checkOutModel.PhoneNumber">
                </div>
                <div class="form-group col-md-6 col-sm-6 col-xs-12 pull-left">
                    <label for="email">Địa chỉ email:</label>
                    <input type="email" class="form-control" ng-model="ctrl.checkOutModel.EmailAddress">
                </div>
                <div class="form-group col-md-12 col-sm-12 col-xs-12 pull-left">
                    <label for="email">Ghi chú:</label>
                    <textarea rows="5" class="form-control" ng-model="ctrl.checkOutModel.Note"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" ng-disabled="formCheckOut.$invalid" class="btn btn-danger btn-checkout" value="Đặt hàng" />
                </div>
            </form>
        </div>
    </div>
</div>
<a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
<!-- //smooth scrolling -->